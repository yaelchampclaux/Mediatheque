{% extends 'base.html.twig' %}

{% block title %}Auteur index{% endblock %}

{% block body %}
    <h1>Index Auteur</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nomoupseudo</th>
                <th>Prenom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for auteur in auteurs %}
            <tr>
                <td>{{ auteur.id }}</td>
                <td>{{ auteur.nomoupseudo }}</td>
                <td>{{ auteur.prenom }}</td>
                <td>
                    <a href="{{ path('app_auteur_show', {'id': auteur.id}) }}">Voir</a>
                    <a href="{{ path('app_auteur_edit', {'id': auteur.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">pas d’entrées trouvées</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_auteur_new') }}">Nouveau</a>
{% endblock %}
