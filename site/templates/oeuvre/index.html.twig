{% extends 'base.html.twig' %}

{% block title %}Oeuvre index{% endblock %}

{% block body %}
    <h1>Oeuvre index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Photo</th>
                <th>Annee</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for oeuvre in oeuvres %}
            <tr>
                <td>{{ oeuvre.id }}</td>
                <td>{{ oeuvre.titre }}</td>
                <td>{{ oeuvre.photo }}</td>
                <td>{{ oeuvre.annee }}</td>
                <td>
                    <a href="{{ path('app_oeuvre_show', {'id': oeuvre.id}) }}">Visualiser</a>
                    <a href="{{ path('app_oeuvre_edit', {'id': oeuvre.id}) }}">Éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Il n'y a pas de correspondences</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_oeuvre_new') }}">Créer une nouvelle Oeuvre</a>
{% endblock %}
