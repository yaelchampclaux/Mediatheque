{% extends 'base.html.twig' %}

{% block title %}Liste des Séries{% endblock %}

{% block body %}
    <h1>Liste des Séries</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Nombre de Tomes</th>
                <th>Informations</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for serie in series %}
            <tr>
                <td>{{ serie.id }}</td>
                <td>{{ serie.titre }}</td>
                <td>{{ serie.nbtomes }}</td>
                <td>{{ serie.info }}</td>
                <td>
                    <a href="{{ path('app_serie_show', {'id': serie.id}) }}">Voir</a>
                    <a href="{{ path('app_serie_edit', {'id': serie.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_serie_new') }}">Créer une nouvelle série</a>
{% endblock %}
