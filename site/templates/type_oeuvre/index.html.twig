{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <style>
        /* Assure que le body et html occupent toute la hauteur */
        html, body {
            height: 100%;
            margin: 0;
        }

        /* Le contenu principal prend tout l'espace avant le footer */
        .content {
            flex: 1;
        }

        /* Footer qui reste en bas uniquement pour cette page */
        footer {
            background-color: #222;
            color: white;
            text-align: center;
            padding: 15px;
            position: absolute;
            bottom: 0;
            width: 100%;
        }
    </style>
{% endblock %}

{% block title %}TypeOeuvre index{% endblock %}

{% block body %}
    <h1>TypeOeuvre index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for type_oeuvre in type_oeuvres %}
            <tr>
                <td>{{ type_oeuvre.id }}</td>
                <td>{{ type_oeuvre.type }}</td>
                <td>
                    <a href="{{ path('app_type_oeuvre_show', {'id': type_oeuvre.id}) }}">Visualiser</a>
                    <a href="{{ path('app_type_oeuvre_edit', {'id': type_oeuvre.id}) }}">Ã‰diter</a>
                </td>
            </tr>
        {% else %}
